.s-logo-brands {
	padding 20px 0
	
	@media (min-width 768px) {
		padding 50px 0
	}
	
	&__title {
		margin-bottom 25px
		color #283346
		text-align center
		
		@media (min-width 768px) {
			margin-bottom 40px 
		}
		
		@media (min-width 992px) {
			margin-bottom 70px 
		}
	}
	
	&__container {
		margin auto
		max-width 1200px
		padding 0 15px
	}
	
	&__wrap {
		padding 0 20px
		
		
		@media (min-width 1300px) {
			margin 0 -20px
		}
	}
	
	&__slide {
		padding 5px
	}
	
	&__logo {
		max-width 100% 
		height auto
	}
	
	&__wrap {
		position relative
	}
	
	&__prev,
	&__next {
		position absolute
		top 50%
		transform translate(0, -50%)
		z-index 5
		cursor pointer 
		border none
		background transparent
		padding 0
		
		&.swiper-button-disabled {
			opacity 0.7
		}
	}
	
	&__prev {
		left 0
	}
	
	&__next {
		right 0
	}
}