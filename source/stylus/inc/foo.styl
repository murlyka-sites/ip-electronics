
.s-foo {
	padding 0
	
	
	@media (min-width 768px) {
		padding 70px 0 0
		background url(../images/pattern.jpg) center center
	}
	
	&__container {
		container()
		padding 0 15px 
	}
	
	&__nav {
		display none
		
		@media (min-width 992px) {
			display block
		}

	}
	
	
	&__row {
		text-align center
		padding 20px 0 20px
		
		@media (min-width 768px) {
			display flex
			align-items center
			justify-content space-between
			padding 50px 0 20px
			text-align left
		}
		
		@supports(display grid) {
			@media (min-width 768px) {
				display grid
				grid-template-columns auto 240px
			}
			
			@media (min-width 992px) {
				grid-template-columns auto 240px 270px 
			}
		}
	}
	
	&__column {
		
		&_slogan {
			
		}
		
		&_copy {
			
		}
		
		&_dev {
			display block
			
			@media (min-width 768px) {
				display none
			}
			
			@media (min-width 992px) {
				display block
			}
		}
	}
	
	&__slogan {
		margin-bottom 10px
		font-size 12px
		color #8e949d
		
		@media (min-width 768px) {
			font-size 14px
			margin-bottom 0
		}
	}
	
	&__copy {
		margin-bottom 5px 
		color #8e949d
		font-size 14px
		
		@media (min-width 768px) {
			margin-bottom 0
		}
	}
}

.foo-dev {
	display flex
	justify-content center
	align-items center
	flex-direction row-reverse
	
	@media (min-width 768px) {
		display flex
		flex-direction row
	}
	
	&__logo {
		margin-left 20px
		
		@media (min-width 768px) {
			margin-right 20px 
			margin-left 0
		}
	}
	
	&__name {
		color #8e949d
		font-size 12px 
	}
	
	&__link {
		color inherit
	}
}