.s-customers-about {
	padding 30px 0 30px
	border 1px solid #e9e9e9
	
	@media (min-width 768px) {
		padding 50px 0 40px
	}
	
	&__container {
		container()	
	}
	
	&__title {
		margin-bottom 25px 
		text-shadow 0 1px 0 #ffffff
		color #283346
		text-align center
		text-transform uppercase
		
		@media (min-width 768px) {
			margin-bottom 70px 
		}
	}
	
	&__grid {
		display flex
		
	}
	
	&__column {
		width 100%
		padding 0 20px 
		
		@media (min-width 768px) {
			width 50%
		}
		
		@media (min-width 992px) {
			width 33.3% 
		}
	}
	
	&__button {
		display block
		margin 25px auto 0
		
		@media (min-width 768px) {
			margin 50px auto 0
		}
	}
}

.c-customers-about {
	display flex
	align-items flex-start
	
	&__column {
		&_pr {
			margin-top 15px 
			margin-right 20px 
			padding 2px 
			border 1px solid #8e949d
			border-radius 50%
			overflow hidden
			flex none
			width 76px 
			
			@media (min-width 768px) {
				width 102px
				margin-top 0 
			}
		}
	}
	
	&__pr {
		display block
		width 100%
		height auto
		border-radius 50%
		
	}
	
	&__name {
		color #256eab
		font-size 16px
	}
	
	&__city {
		margin-bottom 10px 
		color #283346
		font-size 14px
		
		@media (min-width 768px) {
			margin-bottom 20px 
		}
	}
	
	&__desc {
		color #8e949d
		font-size 12px
		margin-bottom 15px 
		line-height 18px
		
		@media (min-width 768px) {
			font-size 14px
			line-height 24px
		}
	}
}